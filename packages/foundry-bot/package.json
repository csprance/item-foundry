{
  "name": "@qtg/foundry-bot",
  "version": "0.0.1",
  "private": true,
  "description": "The Foundry Bot CLI for @qtg/item-foundry",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Chris Sprance",
  "type": "module",
  "module": "./src/index.ts",
  "scripts": {
    "dev": "chokidar 'src/**/*' -i 'src/**/index.ts' -c 'bun run barrels'",
    "barrels": "barrelsby --config .barrelsby.json",
    "prettier": "prettier \"**/*.{ts,js,json,md,yml,yaml,gql,graphql}\" --write",
    "lint": "eslint \"**/*.ts\"",
    "build": "bun barrels && bun build ./src/index.ts --compile --outfile ../../foundry-bot"
  },
  "devDependencies": {
    "@qtg/base-foundry": "workspace:*",
    "@qtg/tsconfig": "workspace:*",
    "clipanion": "^4.0.0-rc.4",
    "typanion": "^3.14.0"
  }
}
